html {
  margin: 0;
  box-sizing: border-box;
  height: 100%;
}

*, *:before, *:after {
  box-sizing: inherit;
  margin: 0;
}

body {
  font-family: 'Open Sans', sans-serif;
  font-weight: 300;
  color: #444;
  height: 100%;
  background-color: #fff;
}

.content-wrapper {
  margin-bottom: 0px;
  min-height: 100%;
}

.header {
  padding: 0 0 10px 0;
  width: 100%;
  margin: 0 0 15px;
  color: #757575;
  text-align: center;
}


h1 {
  font-family: 'Roboto Slab', sans-serif;
  font-weight: 400;
  font-size: 18px;
  padding: 10px 0;
  margin: 28px auto 5px auto;
  color: #777;
  text-transform: uppercase;
  border: 1px solid #999;
  display: block;
  width: 150px;
}

h1 span {
  margin-left: 5px;
}

h1 a:link, h1 a:visited, h1 a:active {
  color: #777;
}

a {
  text-decoration: none
}

.current-weather {
  font-size: 13px;
  color: #333;
  height: 20px;
  overflow: hidden;
  max-width: 380px;
  display: block;
  margin: 8px auto 0;
  line-height: 20px;
}

.current-weather .inner {
  font-size: 14px;
  height: 20px;
  transition: all 0.5s ease;
  position: relative;
  top: 0px;
  cursor: pointer;
  margin: 0 10px;
}

p {
  margin: 0.3em 0
}

b {
  font-weight: 400;
}

.all-clear {
  text-align: center;
  margin: 0 0 35px 0;
}

.all-clear i {
  font-size: 50px;
  color: #069e06;
}

.all-clear .title {
  font-size: 18px;
  font-weight: 500;
}

.all-clear .details {
  font-size: 16px;
  color: #555;
  margin-top: -10px;
}

.updates {
  max-width: 400px;
  width: 100%;
  display: block;
  margin: 0 auto;
  text-align: left;
  list-style: none;
  padding: 0 10px;
}

.updates a {
  text-decoration: underline;
  color: inherit;
}

.updates:after {
  content: "••••";
  font-size: 24px;
  color: #70a0dc;
  text-align: center;
  display: block;
  margin: 0 auto 15px;
}



.updates > li {
    color: #555;
    border: 1px solid #cccccc;
    border-radius: 4px;
    margin: 10px 0;
    padding: 20px 0 20px 0;
    background-color: #fbfbfb;
    font-size: 14px;
    position: relative;
    /*box-shadow: 2px 2px 2px #d2d2d2*/
}

.updates > li:last-child {
  margin-bottom: 15px;
}


.updates .icon {
  color: #6da4d6;
  margin: 0 0 5px 0;
  position: absolute;
  top: 25px;
  left: 27px;
  font-size: 36px;
  width: 40px;
  text-align: center;
}


.updates > li .title {
  margin: 0 0 5px 0;
  font-size: 16px;
  font-weight: 600;
}

.updates > li .title, .updates > li .msg, .updates > li .label-status, .updates > li .date-info {
  padding: 0 25px 0 90px;
}


.updates > li.later .title, .updates > li.later .msg, .updates > li.later .icon, .updates > li.later .date-info {
  color: #afafaf;
}

.updates > li .msg {
  /*border-top: 1px solid #eee;
  margin: 20px 0 0 0;
  padding: 20px 0 0 0;*/
  color: #444;
  font-weight:400;
  line-height: 22px;
}

.updates > li .msg ul {
  padding-left: 18px;
}


.updates > li .title:before {
  font-size: 24px;
  }

.updates > li .more {
  text-transform: uppercase;
  font-size: 12px;
  margin: 15px 0 0 0;
  text-align: center;
}

.updates > li .more a {
  text-decoration: underline;
  color: #444;
}

.updates > li .date-info {
  margin: 5px 0 0 0;
  color: #888;
  font-weight:400;
}

.updates > li .label-status {
  color: #999;
  font-size: 11px;
  position: relative;
  top: -5px;
  margin-bottom: -3px;
}

.updates > li .label-status i {
  font-size: 12px;
  vertical-align: middle;
}

.updates > li .attribution {
  padding: 0 25px;
  font-size: 11px;
  margin-top: 20px;
  color: #b3b3b3;
}

.update.severity-high .icon{
  color: #E65252;
}

.weather-alert .icon:before {
  content: "t";
  font-family: "c1";

}

.precip.rain .icon:before {
  content: "i";
  font-family: "c1";
}

.precip.snow .icon:before {
  content: "C";
  font-family: "c1";
}

.precip.hail .icon:before, .precip.sleet .icon:before {
  content: "H";
  font-family: "c1";
}

.cubs .icon:before {
  content: "p";
  font-family: C1;
}

.sox .icon:before {
  content: "o";
  font-family: C1;
}

.transit .icon:before {
    content: "a";
    font-family: C1;
}

.traffic .icon:before {
    content: "h";
    font-family: C1;
}


.traffic.lake-shore-drive-southbound .icon:before {
    content: "w";
    font-family: C1;
}

.traffic.lake-shore-drive-northbound .icon:before {
    content: "v";
    font-family: C1;
}


.uber .icon:before {
    content: "n";
    font-family: C1;
}

.special .icon:before {
  background-image: url("http://img.relax.ru/88317/9506715671966128_4d299cc8.jpg");
    background-size: 10px 20px;
    display: inline-block;
    width: 10px; 
    height: 20px;
    content:"";
}

.blue-line .title:before {
  content: "Blue Line";
}

.red-line .title:before {
  content: "Red Line";
}



.custom-update .icon:before {
    content: attr(data-icons);
    font-family: 'C1';
}

.game-bulls .icon:before {
  display: block;
  content: ' ';
  background-image: url(/images/bulls-blue.svg);
  width: 40px;
  height: 40px;
  background-size: 40px 40px;
}

.game-bulls.later .icon:before {
  background-image: url(/images/bulls-gray.svg);
}

.next-days {
    max-width: 350px;
    width: 90%;
    display: block;
    margin: 10px auto 10px;
    padding: 22px 20px 10px;
    border-radius: 4px;
    color: #555;
    border: 1px dashed #b7b6b6;
    background-color: #fff
}


.next-days h3 {
    font-size: 13px;
    text-transform: uppercase;
    font-weight: 300;
    margin: 0 0 7px;
    display: inline-block;
}

.next-days h3:before {
  content: attr(data-date-num);
  border-left: 1px solid #999;
  border-right: 1px solid #999;
  border-bottom: 1px solid #999;
  border-top: 3px solid #999;
  width: 17px;
  height: 17px;
  margin: 0 5px 0 0;
  font-family: helvetica;
  font-size: 10px;
  text-align: center;
  color: #555;
  display: inline-block;
  position: relative;
  top: -2px;
  line-height: 15px;
}

.next-days ul {
    margin-top: 10px;
    padding-left: 20px;
    font-size: 14px;
    text-transform: none;
}

.next-days ul li {
  margin: 5px 0;
}


.push-footers {
  height: 0px;
}

.hide-button {
    display: block;
    margin: 50px auto 0;
    width: 80px;
    color: #94ACCC;
    text-align: center;
}

.hide-button .icon {
    display: block;
    margin: 0 auto;
}

.hide-button .icon:before {
  content: "\f05e";
  font-family: FontAwesome;
  font-size: 40px;
}


.hide-button .label:before {
  display: block;
  content: "Hide categories you don't need";
  font-size: 10px;
  line-height: 12px;
  margin: 5px auto;
}


.message-bar {
  width: 100%;
  margin: 150px 0 0px;
  color: #cac7c7;
  position: fixed;
  left: 0;
  bottom: -90px;
  padding: 10px 0;
  background-color: rgba(0,0,0,0.85);
  -webkit-transition: all 0.2s;
}

.message-bar div:first-child {
  width: 100%;
  max-width: 600px;
  font-size: 13px;
  display: block;
  margin: 0 auto;
  position: relative;
}

.message-bar div:first-child p {
  padding: 0 60px 0 10px;
}

.message-bar .dismiss-btn {
  position: absolute;
  right: 10px;
  top: 0px;
  bottom: 0px;
  margin: auto;
  /* height: 100%; */
  /* line-height: 10px; */
  height: 35px;
  background-color: #cccbcb;
  width: 35px;
  border-radius: 50%;
  font-size: 12px;
  text-align: center;
  line-height: 35px;
  color: #565656;
  font-weight: 700;
  cursor: pointer;
}

.message-bar .dismiss-btn:before {
  content: attr(data-dismiss-cta);
}

.message-bar a {
  color: #fff;
  font-weight: 400;
  text-decoration: underline;
}

.message-bar .fb-like-container {
  position: absolute;
  margin: auto;
  top: 0;
  bottom: 0;
  left: 10px;
  height: 28px;
}

.message-bar .fb-like-message {
  padding: 10px 60px 10px 82px;
}


ul.options {
  list-style: none;
  text-align: center;
  padding: 0;
  margin: 50px 0 0 0;
}

ul.options li {
  display: inline-block;
  vertical-align: top;
  margin: 0 25px;
  width: 80px;
}

ul.options li i {
  font-size: 30px;
  color: #777;
}

ul.options li i:hover {
  color: #111;
}

ul.options a:link {
  text-decoration: none;
  color: #777;
}

ul.options a:link:hover {
  color: #111;
}

ul.options li .text {
  font-size: 10px;
  display: block;
  margin: 5px 0 0 0;
  font-weight: 400
}

ul.options .op-about .icon-c1-logo {
  font-size: 24px;
  margin-bottom: -2px;
}


.footer {
  padding: 30px 10px 90px;
  margin: 35px 0 0 0;
  list-style: none;
  text-align: center;
  font-size: 12px;
  background-color: #777;
  position: relative;
  color: #eee;
}

.footer h3 {
  font-weight: 600;
  margin-bottom: 5px;
}


.footer .sources-text {
  max-width: 500px;
  display: block;
  margin: 0 auto 30px;
  font-family: Open Sans, sans-serif;
  border-bottom: 1px solid #999;
  padding: 0 0 30px 0;
}

.footer .sources-text p {
  max-width: 300px;
  display: block;
  margin: 10px auto;
}

.footer .sources-text a {
  color: inherit;
}


.footer ul {
  padding: 0;
}

.footer ul li {
  display: inline-block;
  color: #eee;

  font-weight: 400;
}

.footer ul li:not(:first-child):before {
  content: "-";
  margin: 0 5px;
  font-size: 16px;
}

.footer a:link {
  text-decoration: none;
  color: #eee;
}

.footer .email-signup {
  max-width: 500px;
  display: block;
  margin: 0 auto 30px;
  border-bottom: 1px solid #999;
  padding: 0 0 30px;
}

.footer .c1disclaimer {
  margin: 10px 0;
}

.footer .c1disclaimer:before {
  content: 'This website may display inaccurate information at times. Be sure to check multiple sources.';
  margin: 10px 0;
}

.footer .c1built {
  margin: 30px 0 5px;
}

.footer .c1built-icons i {
  vertical-align: middle;
  margin: 0 4px
}


.footer .c1built-icons .icon-laptop {
  color: #3939d4;
  font-size: 18px;
  position: relative;
  top: 2px
}

.footer .c1built-icons .icon-coffee {
  color: #afafaf;
  font-size: 20px;
  position: relative;
  left: 2px;
}

.footer .c1built-icons .icon-chicago-star {
  color: #8e0404;
  font-size: 17px;
  position: relative;
  top: 2px;
}


.modal {
  display: none;
}

.modal .background{
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #000;
  opacity: 0.5;
  top: 0px;
  left: 0px;
}

.modal .inner{
  color: #fff;
  position: fixed;
  left: 0px;
  right: 0px;
  width: 300px;
  height: 460px;
  background-color: #444;
  top: 0px;
  bottom: 0px;
  display:block;
  margin:auto;
  opacity: 1;
  border-radius: 5px;
  padding: 15px;
  overflow: auto;
}

.getting-data {
  position: absolute;
  margin: auto;
  height: 20px;
  top: 0px;
  bottom: 0px;
  left: 0px;
  right: 0px;
  color: #444;
  font-weight:400;
  text-align: center;
}

.getting-data .message:before {
  content: 'Fetching data...';
}




body .buorg {
  background-color: #fff;
}

@media (max-width: 450px) {

  .updates .icon {
    left: 22px;
  }

  .updates > li .title, .updates > li .msg, .updates > li .label-status, .updates > li .date-info {
    padding-left: 80px;
  }

}


@media (max-width: 360px) {
  .weather {
    top: 18px;
  }

  .updates .icon {
    left: 4vw;
  }

  .updates > li .title, .updates > li .msg, .updates > li .label-status{
    padding-left: 20vw;
  }

}